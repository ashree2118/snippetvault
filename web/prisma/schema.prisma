// web/prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // DO NOT put 'url' here anymore
}

model Snippet {
  id          String   @id @default(cuid())
  code        String   @db.Text
  language    String?
  title       String?
  explanation String?  @db.Text
  tags        String[]
  sourceUrl   String?
  createdAt   DateTime @default(now())
}